<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_category_30"
        android:layout_marginStart="@dimen/marginStart_category_20"
        android:textSize="@dimen/textSize_category_25"
        android:textStyle="bold"
        tools:text="@string/popular" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/list_movies"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_category_content_300"
            android:orientation="horizontal" />
    </HorizontalScrollView>
</LinearLayout>